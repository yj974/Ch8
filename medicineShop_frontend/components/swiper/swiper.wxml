<view class="swiper">
    <swiper
            class="myswiper"
            indicator-dots="{{indicatorDots}}"
            autoplay="{{autoplay}}"
            interval="{{interval}}"
            duration="{{duration}}"
            indicator-color="#fff"
            indicator-active-color="#fa2c19"
    >
        <block wx:for="{{swiperData}}" wx:key="index">
            <swiper-item>
                <image mode="aspectFill"
                       src="{{ item.url }}">
                </image>
            </swiper-item>
        </block>
    </swiper>
</view>