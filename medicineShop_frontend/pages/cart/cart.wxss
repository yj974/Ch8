.page .bar {
    position: fixed;
    bottom: 0;
    width: 100%;
    /*height: 100rpx;*/
    background-color: black;
}


.item {
    display: flex;
    background-color: white;
    width: 95%;
    margin-left: 2.5%;
    border-radius: 10px;
    height: 230rpx;
    margin-top: 15rpx;
    position: relative;
}

.item .titleFather{
    height: 140rpx;
}
.item .title {
    font-size: 15px;
    color: black;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
    overflow: hidden;
    margin-left: 10rpx;
    margin-right: 10rpx;
    margin-bottom: 25rpx;
}

.item .info {
    display: flex;
    width: 100%;
    flex-direction: column;

}

.item .info .price {
    margin-top: auto; /* 将价格部分向上推至最后一行 */
    display: flex;
    justify-content: space-between;
    color: red;
}

.item .info .price .stepper {
    margin-top: auto;
    margin-right: 10rpx;
}

.item .left {
    width: 50%;
    height: 90%;
    display: flex;
    margin-top: 10rpx;
    align-items: center;
}

.item .left .image {
    width: 100%;
    height: 100%;
    border-radius: 10px;
    margin-left: -10rpx;
}

.item .left .checkbox {
    margin-left: 10rpx;
}