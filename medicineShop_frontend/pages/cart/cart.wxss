.page .bar {
    position: fixed;
    bottom: 0;
    width: 100%;
    /*height: 100rpx;*/
    background-color: black;
}


.item {
    display: flex;
    background-color: gainsboro;
    width: 95%;
    margin-left: 2.5%;
    border-radius: 10px;
    height: 230rpx;
    margin-top: 15rpx;
}

.item .image {
    width: 40%;
    height: 90%;
    border-radius: 10px;
    margin-top: 1.5%;
    margin-left: 10rpx;
}

.item .title{
    margin-right: 10rpx;
    margin-left: 10rpx;
    margin-top: 10rpx;
    height: 145rpx;
}

.item .info {
    display: flex;
    width: 100%;
    flex-direction: column;

}
.item .price {
    margin-top: auto;
    /*margin-bottom: 20rpx;*/
    display: flex;
    justify-content: space-between;
    color: red;
}

.item .price .stepper{
    margin-top: 15rpx;
    margin-right: 10rpx;
}

